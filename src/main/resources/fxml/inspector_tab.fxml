<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serialcomm.controller.InspectorTabController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label fx:id="filterLabel" text="%ui.inspector.filter" />
                <TextField fx:id="filterField" promptText="%ui.inspector.filter.prompt" />
                <Label fx:id="windowLabel" text="%ui.inspector.window" />
                <ComboBox fx:id="windowCombo" />
                <!-- Inspector: removed periodic refresh; now event-driven updates -->
                <Region />
                <Button fx:id="clearBtn" text="%ui.inspector.clear" />
            </children>
        </HBox>

        <TableView fx:id="table" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="%ui.inspector.empty" />
            </placeholder>
            <columns>
                <TableColumn fx:id="colTime" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="%ui.inspector.time" />
                <TableColumn fx:id="colSys" maxWidth="150.0" minWidth="50.0" prefWidth="50.0" text="%ui.inspector.sys" />
                <TableColumn fx:id="colComp" maxWidth="150.0" minWidth="50.0" prefWidth="50.0" text="%ui.inspector.comp" />
                <TableColumn fx:id="colMsgId" maxWidth="150.0" minWidth="50.0" prefWidth="50.0" text="%ui.inspector.msgid" />
                <TableColumn fx:id="colName" maxWidth="600.0" minWidth="200.0" prefWidth="200.0" text="%ui.inspector.name" />
                <TableColumn fx:id="colFreq" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="%ui.inspector.freq" />
            </columns>
        </TableView>
    </children>
</VBox>
