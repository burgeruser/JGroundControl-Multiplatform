<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serialcomm.controller.ParamTabController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Button fx:id="btnRefresh" text="%ui.params.refresh" />
                <Button fx:id="btnBackup" text="%ui.params.backup" />
                <Button fx:id="btnWrite" text="%ui.params.write" />
                <Label text="" />
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label fx:id="filterLabel" text="%ui.params.filter" />
                <TextField fx:id="filterField" minWidth="200.0" promptText="%ui.params.filter.prompt" />
                <Label fx:id="groupLabel" text="%ui.params.view" />
                <ComboBox fx:id="groupCombo" />
                <Button fx:id="btnMetaRefresh" text="%ui.params.meta.refresh" />
                <Label fx:id="metaStatsLabel" text="" />
            </children>
        </HBox>

        <TableView fx:id="table" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colGroup" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="%ui.params.col.group" />
                <TableColumn fx:id="colCommand" maxWidth="900.0" minWidth="300.0" prefWidth="300.0" text="%ui.params.col.command" />
                <TableColumn fx:id="colValue" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="%ui.params.col.value" />
                <TableColumn fx:id="colUnit" maxWidth="210.0" minWidth="80.0" text="%ui.params.col.unit" />
                <TableColumn fx:id="colRange" maxWidth="450.0" minWidth="150.0" prefWidth="150.0" text="%ui.params.col.range" />
                <TableColumn fx:id="colDesc" maxWidth="900.0" minWidth="300.0" prefWidth="300.0" text="%ui.params.col.description" />
            </columns>
        </TableView>

        <TreeTableView fx:id="tree" managed="false" visible="false" VBox.vgrow="ALWAYS">
            <columns>
                <TreeTableColumn fx:id="tColGroup" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="%ui.params.col.group" />
                <TreeTableColumn fx:id="tColCommand" maxWidth="900.0" minWidth="300.0" prefWidth="300.0" text="%ui.params.col.command" />
                <TreeTableColumn fx:id="tColValue" maxWidth="300.0" minWidth="100.0" prefWidth="100.0" text="%ui.params.col.value" />
                <TreeTableColumn fx:id="tColUnit" maxWidth="210.0" minWidth="80.0" text="%ui.params.col.unit" />
                <TreeTableColumn fx:id="tColRange" maxWidth="450.0" minWidth="150.0" prefWidth="150.0" text="%ui.params.col.range" />
                <TreeTableColumn fx:id="tColDesc" maxWidth="900.0" minWidth="300.0" prefWidth="300.0" text="%ui.params.col.description" />
            </columns>
        </TreeTableView>
    </children>
</VBox>
