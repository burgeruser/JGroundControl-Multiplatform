<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="8" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serialcomm.controller.StatusTabController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <TreeTableView fx:id="statusTree" showRoot="false" VBox.vgrow="ALWAYS">
            <columns>
                <TreeTableColumn fx:id="colName" maxWidth="750.0" minWidth="250.0" prefWidth="250.0" text="%ui.status.name" />
                <TreeTableColumn fx:id="colRemark" maxWidth="750.0" minWidth="250.0" prefWidth="250.0" text="%ui.status.remark" />
                <TreeTableColumn fx:id="colValue" maxWidth="450.0" minWidth="150.0" prefWidth="150.0" text="%ui.status.value" />
                <TreeTableColumn fx:id="colEnum" maxWidth="600.0" minWidth="200.0" prefWidth="200.0" text="%ui.status.enum" />
                <TreeTableColumn fx:id="colFreq" maxWidth="240.0" minWidth="80.0" text="%ui.status.freq" />
            </columns>
        </TreeTableView>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label fx:id="statusRefreshLabel" text="%ui.status.refresh.period" />
                <ComboBox fx:id="statusRefreshCombo" />
                <Button fx:id="refreshBtn" text="%ui.status.refresh" />
            </children>
        </HBox>
    </children>
</VBox>
