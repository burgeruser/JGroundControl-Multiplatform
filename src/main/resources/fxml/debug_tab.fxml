<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Serial debug tab FXML -->

<VBox spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.serialcomm.controller.DebugTabController">
   <children>
      <!-- Receive mode selection row -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <children>
            <Label fx:id="receiveModeLabel" text="%ui.debug.receive.mode" />
            <RadioButton fx:id="asciiRadioButton" selected="true" text="ASCII" />
            <RadioButton fx:id="hexRadioButton" text="HEX" />
            <Button fx:id="clearReceiveButton" text="%ui.debug.clear.receive" />
         </children>
      </HBox>
      <!-- Receive area -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <children>
            <Label fx:id="receiveAreaLabel" text="%ui.debug.receive.area" />
            <Separator orientation="HORIZONTAL" prefWidth="10" />
         </children>
      </HBox>
      <TextArea fx:id="receiveTextArea" editable="false" styleClass="text-area" wrapText="true" VBox.vgrow="ALWAYS" />
      <!-- Send area -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <children>
            <Label fx:id="sendAreaLabel" text="%ui.debug.send.area" />
            <Separator orientation="HORIZONTAL" prefWidth="10" />
            <Label fx:id="sendHintLabel" styleClass="hint-text" text="%ui.debug.send.hint" textFill="#666" />
            <Button fx:id="sendButton" disable="true" prefWidth="70.0" styleClass="send-button" text="%ui.debug.send" />
         </children>
      </HBox>
      <TextArea fx:id="sendTextArea" styleClass="text-area" wrapText="true" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
